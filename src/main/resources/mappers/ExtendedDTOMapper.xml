<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.5.10//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.PhamKornbluhGroup.mybatismysqlimpl.IExtendedDTO">

    <resultMap id="ExtendedDTOMap" type="com.PhamKornbluhGroup.DTO.ExtendedDTO" autoMapping="false">
        <id property="dbId" column="dbId"/>
        <result property="itemId" column="itemId"/>
        <result property="category" column="category"/>
        <result property="prefixes" column="prefixes"/>
        <result property="suffixes" column="suffixes"/>
        <collection property="subcategories" column="dbId" javaType="Array" ofType="java.lang.String" select="getSubcategoriesByExtendedId">
            <result property="subcategory" column="subcategory"/>
        </collection>
    </resultMap>

<!--
We're going to need to update several things here. It's likely that the subcategories collection might not work
the getSubcategoriesByExtendedId query might have problems as well
also we have 2 saveEntity queries, and only one will be used. neither work. We need to fix the second one
-->

    <select id="getEntityById" resultMap="ExtendedDTOMap">
        <![CDATA[
        SELECT
            dbId,
            itemId,
            category,
            prefixes,
            suffixes
        FROM Extended
        WHERE Extended.dbId = #{dbId}
		]]>
    </select>

    <select id="getSubcategoriesByExtendedId">
        <![CDATA[
        SELECT subcategory
        FROM Subcategories
        WHERE extendedId = #{dbId}
		]]>
    </select>

    <insert id="saveEntity" useGeneratedKeys="true" keyProperty="dbId">
        <![CDATA[
			INSERT INTO Extended
			    (itemId, layout, x, x, x, x, x)
			VALUES (#{itemId}, #{layout})
		]]>
    </insert>

    <insert id="saveEntity" parameterType="java.util.List">
        INSERT INTO Extended (
            (id, itemId, category, prefixes, suffixes, game_type)
        VALUES
        <foreach collection="list" item="element" index="index" open="(" separator="),("  close=")">
            #{element}
        </foreach>
    </insert>

    <update id="updateEntity">
        <![CDATA[
			UPDATE Extended
			SET itemId = #{itemId},
			    layout = #{layout}
			WHERE dbId = #{dbId}
		]]>
    </update>

    <delete id="removeEntity">
        <![CDATA[
			DELETE FROM Extended
			WHERE dbId = #{dbId}
		]]>
    </delete>

</mapper>