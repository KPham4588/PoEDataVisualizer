------------- Crucible Node -------------

CREATE TABLE IF NOT EXISTS `poe-oracle`.`CrucibleNode` (
  `dbId` INT NOT NULL,
  `crucibleId` INT NOT NULL,
  `skill` BIGINT NULL,
  `tier` BIGINT NULL,
  `icon` VARCHAR(255) NULL,
  `allocated` BOOLEAN NULL,
  `isNotable` BOOLEAN NULL,
  `isReward` BOOLEAN NULL,
  `stats` TEXT NULL,
  `reminderText` TEXT NULL,
  `orbit` BIGINT NULL,
  `orbitIndex` BIGINT NULL,
  `out` TEXT NULL,
  `in` TEXT NULL,
  PRIMARY KEY (`dbId`)
);

------------- Crucible -------------

CREATE TABLE IF NOT EXISTS `poe-oracle`.`Crucible` (
  `dbId` INT NOT NULL AUTO_INCREMENT,
  `itemId` INT NOT NULL,
  `layout` VARCHAR(255) NOT NULL,
  PRIMARY KEY (`dbId`)
);

------------- ArrayList<String> objects inside Item -------------
CREATE TABLE IF NOT EXISTS `poe-oracle`.`UtilityMods` (
  `dbId` INT NOT NULL AUTO_INCREMENT,
  `itemId` INT NOT NULL,
  `utilityMod` VARCHAR(255) NOT NULL,
  PRIMARY KEY (`dbId`)
);

CREATE TABLE IF NOT EXISTS `poe-oracle`.`EnchantMods` (
  `dbId` INT NOT NULL AUTO_INCREMENT,
  `itemId` INT NOT NULL,
  `enchantMod` VARCHAR(255) NOT NULL,
  PRIMARY KEY (`dbId`)
);

CREATE TABLE IF NOT EXISTS `poe-oracle`.`ScourgeMods` (
  `dbId` INT NOT NULL AUTO_INCREMENT,
  `itemId` INT NOT NULL,
  `scourgeMod` VARCHAR(255) NOT NULL,
  PRIMARY KEY (`dbId`)
);

CREATE TABLE IF NOT EXISTS `poe-oracle`.`ImplicitMods` (
  `dbId` INT NOT NULL AUTO_INCREMENT,
  `itemId` INT NOT NULL,
  `implicitMod` VARCHAR(255) NOT NULL,
  PRIMARY KEY (`dbId`)
);

CREATE TABLE IF NOT EXISTS `poe-oracle`.`ExplicitMods` (
  `dbId` INT NOT NULL AUTO_INCREMENT,
  `itemId` INT NOT NULL,
  `explicitMod` VARCHAR(255) NOT NULL,
  PRIMARY KEY (`dbId`)
);

CREATE TABLE IF NOT EXISTS `poe-oracle`.`CraftedMods` (
  `dbId` INT NOT NULL AUTO_INCREMENT,
