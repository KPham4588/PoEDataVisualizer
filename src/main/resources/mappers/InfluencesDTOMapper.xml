<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.5.10//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.PhamKornbluhGroup.mybatismysqlimpl.IInfluencesDTO">

    <resultMap id="InfluencesDTOMap" type="com.PhamKornbluhGroup.DTO.InfluencesDTO" autoMapping="false">
        <id property="dbId" column="dbId"/>
        <result property="itemId" column="itemId"/>
        <result property="crusader" column="crusader"/>
        <result property="shaper" column="shaper"/>
        <result property="elder" column="elder"/>
        <result property="hunter" column="hunter"/>
        <result property="redeemer" column="redeemer"/>
        <result property="warlord" column="warlord"/>
    </resultMap>

    <select id="getEntityById" resultMap="InfluencesDTOMap">
        <![CDATA[
        SELECT *
        FROM Influences
        WHERE Influences.dbId = #{dbId}
		]]>
    </select>

    <select id="getEntityByItemId" resultMap="InfluencesDTOMap">
        <![CDATA[
        SELECT *
        FROM Influences
        WHERE Influences.itemId = #{dbId}
		]]>
    </select>

    <insert id="saveEntity" useGeneratedKeys="true" keyProperty="dbId">
        <![CDATA[
			INSERT INTO Influences
			    (dbId, itemId, crusader, shaper, elder, hunter, redeemer, warlord)
			VALUES (#{dbId}, #{itemId}, #{crusader}, #{shaper}, #{elder}, #{hunter}, #{redeemer}, #{warlord})
		]]>
    </insert>

    <update id="updateEntity">
        <![CDATA[
			UPDATE Influences
			SET itemId = #{itemId},
			    crusader = #{crusader},
			    shaper = #{shaper},
			    elder = #{elder},
			    hunter = #{hunter},
			    redeemer = #{redeemer},
			    warlord = #{warlord}
			WHERE dbId = #{dbId}
		]]>
    </update>

    <delete id="removeEntity">
        <![CDATA[
			DELETE FROM Influences
			WHERE dbId = #{dbId}
		]]>
    </delete>

</mapper>