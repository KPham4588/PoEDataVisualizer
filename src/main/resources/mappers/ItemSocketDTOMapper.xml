<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.5.10//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.PhamKornbluhGroup.mybatismysqlimpl.IItemSocketDTO">

    <resultMap id="ItemSocketDTOMap" type="com.PhamKornbluhGroup.DTO.ItemSocketDTO" autoMapping="false">
        <id property="dbId" column="dbId"/>
        <result property="itemId" column="itemId"/>
        <result property="group" column="group"/>
        <result property="attr" column="attr"/>
        <result property="sColour" column="sColour"/>
    </resultMap>

    <select id="getEntityById" resultMap="ItemSocketDTOMap">
        <![CDATA[
        SELECT *
        FROM ItemSocket
        WHERE ItemSocket.dbId = #{dbId}
		]]>
    </select>

    <select id="getEntityByItemId" resultMap="ItemSocketDTOMap">
        <![CDATA[
        SELECT *
        FROM ItemSocket
        WHERE ItemSocket.itemId = #{dbId}
		]]>
    </select>

    <insert id="saveEntity" useGeneratedKeys="true" keyProperty="dbId">
        <![CDATA[
			INSERT INTO ItemSocket
			    (itemId, group, attr, sColour)
			VALUES (#{itemId}, #{group}, #{attr}, #{sColour})
		]]>
    </insert>

    <update id="updateEntity">
        <![CDATA[
			UPDATE ItemSocket
			SET itemId = #{itemId},
			    group = #{group}
			    attr = #{attr}
			    sColour = #{sColour}
			WHERE dbId = #{dbId}
		]]>
    </update>

    <delete id="removeEntity">
        <![CDATA[
			DELETE FROM ItemSocket
			WHERE dbId = #{dbId}
		]]>
    </delete>

</mapper>