<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.5.19//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.PhamKornbluhGroup.mybatismysqlimpl.ILogbookModsDTO">
    <resultMap id="LogbookModsDTOMap" type="com.PhamKornbluhGroup.DTO.LogbookModsDTO" autoMapping="false">
        <id property="dbId" column="dbId"/>
        <result property="itemId" column="itemId"/>
        <result property="areaName" column="areaName"/>
        <association property="faction" column="dbId" javaType="com.PhamKornbluhGroup.DTO.FactionDTO"
                     select="com.PhamKornbluhGroup.mybatismysqlimpl.IFactionDTO.getEntityByLogbookModsId"/>
        <collection property="mods" column="dbId" javaType="ArrayList" ofType="java.lang.String"
        select="getModsByLogbookModsId">
            <result property="mod" column="mod"/>
        </collection>
    </resultMap>

    <select id="getEntityById" resultMap="LogbookModsDTOMap">
        <![CDATA[
        SELECT
            dbId,
            itemId,
            areaName
        FROM LogbookMods
        WHERE dbId = #{dbId}
		]]>
    </select>

    <select id="getEntityByItemId" resultMap="LogbookModsDTOMap">
        <![CDATA[
        SELECT
            dbId,
            itemId,
            areaName
        FROM LogbookMods
        WHERE itemId = #{dbId}
		]]>
    </select>

    <insert id="saveEntity" useGeneratedKeys="true" keyProperty="dbId">
        <![CDATA[
			INSERT INTO LogbookMods
			    (itemId, areaName)
			VALUES (#{itemId}, #{areaName})
		]]>
    </insert>

    <update id="updateEntity">
        <![CDATA[
			UPDATE LogbookMods
			SET itemId = #{itemId},
			    areaName = #{areaName}
			WHERE dbId = #{dbId}
		]]>
    </update>

    <delete id="removeEntity">
        <![CDATA[
			DELETE FROM LogbookMods
			WHERE dbId = #{dbId}
		]]>
    </delete>

    <insert id="insertMod">
        INSERT INTO ModOfLogbookMods (
        logbookModsId,
        `mod`)
        VALUES
        (#{param1}, #{param2})
    </insert>

    <select id="getModsByLogbookModsId" resultType="java.lang.String">
        <![CDATA[
        SELECT ModOfLogbookMods.`mod`
        FROM ModOfLogbookMods
        WHERE ModOfLogbookMods.logbookModsId = #{dbId}
		]]>
    </select>
</mapper>