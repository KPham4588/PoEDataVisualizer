<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.5.19//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.PhamKornbluhGroup.mybatismysqlimpl.IResultDTO">

    <resultMap id="ResultDTOMap" type="com.PhamKornbluhGroup.DTO.ResultDTO" autoMapping="false">
        <id property="dbId" column="dbId"/>
        <result property="nextChangeId" column="nextChangeId"/>
        <result property="layout" column="layout"/>
        <collection property="stashes" column="dbId" javaType="ArrayList"
                    ofType="com.PhamKornbluhGroup.DTO.PublicStashChangeDTO"
                    select="com.PhamKornbluhGroup.mybatismysqlimpl.IPublicStashChangeDTO.getEntityByResultId"/>
    </resultMap>

    <select id="getEntityById" resultMap="ResultDTOMap">
        <![CDATA[
        SELECT
            dbId,
            nextChangeId
        FROM Result
        WHERE Result.dbId = #{dbId}
		]]>
    </select>

    <insert id="saveEntity" useGeneratedKeys="true" keyProperty="dbId">
        <![CDATA[
			INSERT INTO Result
			    (nextChangeId)
			VALUES (#{nextChangeId})
		]]>
    </insert>

    <update id="updateEntity">
        <![CDATA[
			UPDATE Result
			SET nextChangeId = #{nextChangeId}
			WHERE dbId = #{dbId}
		]]>
    </update>

    <delete id="removeEntity">
        <![CDATA[
			DELETE FROM Result
			WHERE dbId = #{dbId}
		]]>
    </delete>

    <delete id="removeEntityByNextChangeId">
        <![CDATA[
			DELETE FROM Result
			WHERE nextChangeId = #{nextChangeId}
		]]>
    </delete>
</mapper>