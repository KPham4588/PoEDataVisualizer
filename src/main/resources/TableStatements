  `craftedMod` VARCHAR(255) NOT NULL,
  PRIMARY KEY (`dbId`)
);

CREATE TABLE IF NOT EXISTS `poe-oracle`.`FracturedMods` (
  `dbId` INT NOT NULL AUTO_INCREMENT,
  `itemId` INT NOT NULL,
  `fracturedMod` VARCHAR(255) NOT NULL,
  PRIMARY KEY (`dbId`)
);

CREATE TABLE IF NOT EXISTS `poe-oracle`.`CrucibleMods` (
  `dbId` INT NOT NULL AUTO_INCREMENT,
  `itemId` INT NOT NULL,
  `crucibleMod` VARCHAR(255) NOT NULL,
  PRIMARY KEY (`dbId`)
);

CREATE TABLE IF NOT EXISTS `poe-oracle`.`CosmeticMods` (
  `dbId` INT NOT NULL AUTO_INCREMENT,
  `itemId` INT NOT NULL,
  `cosmeticMod` VARCHAR(255) NOT NULL,
  PRIMARY KEY (`dbId`)
