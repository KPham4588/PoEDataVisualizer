<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.5.10//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.PhamKornbluhGroup.mybatismysqlimpl.IFactionDTO">
<!--UNTESTED-->
    <resultMap id="FactionDTOMap" type="com.PhamKornbluhGroup.DTO.FactionDTO" autoMapping="false">
        <id property="dbId" column="dbId"/>
        <result property="logbookModsId" column="logbookModsId"/>
        <association property="factionId" column="dbId" javaType="com.PhamKornbluhGroup.DTO.FactionId"
                     select="com.PhamKornbluhGroup.mybatismysqlimpl.IFactionDTO.getEntityByFactionId"/>
        <result property="factionName" column="factionName"/>
    </resultMap>

    <select id="getEntityById" resultMap="FactionDTOMap">
        <![CDATA[
        SELECT
            dbId,
            logbookModsId,
            factionName
        FROM Faction
        WHERE dbId = #{dbId}
		]]>
    </select>

    <insert id="saveEntity" useGeneratedKeys="true" keyProperty="dbId">
        <![CDATA[
			INSERT INTO Faction
			    (logbookModsId, factionName)
			VALUES (#{logbookModsId}, #{factionName})
		]]>
    </insert>

    <update id="updateEntity">
        <![CDATA[
			UPDATE Faction
			SET logbookModsId = #{logbookModsId},
			    factionName = #{factionName}
			WHERE dbId = #{dbId}
		]]>
    </update>

    <delete id="removeEntity">
        <![CDATA[
			DELETE FROM Faction
			WHERE dbId = #{dbId}
		]]>
    </delete>
</mapper>