<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <settings>
        <setting name="logImpl" value="LOG4J2"/>
    </settings>

    <typeHandlers>
        <typeHandler handler="org.apache.ibatis.type.EnumTypeHandler" javaType="com.PhamKornbluhGroup.DTO.FactionId" />
        <typeHandler handler="org.apache.ibatis.type.EnumTypeHandler" javaType="com.PhamKornbluhGroup.DTO.DisplayMode" />
    </typeHandlers>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <!-- Properties are set via SessionPool Properties file config -->
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="mappers/CrucibleDTOMapper.xml"/>
        <mapper resource="mappers/CrucibleNodeDTOMapper.xml"/>
        <mapper resource="mappers/ExtendedDTOMapper.xml"/>
        <mapper resource="mappers/FactionDTOMapper.xml"/>
        <mapper resource="mappers/FactionIdDTOMapper.xml"/>
        <mapper resource="mappers/HybridDTOMapper.xml"/>
        <mapper resource="mappers/IncubatedItemDTOMapper.xml"/>
        <mapper resource="mappers/InfluencesDTOMapper.xml"/>
        <mapper resource="mappers/ItemDTOMapper.xml"/>
        <mapper resource="mappers/ItemPropertyDTOMapper.xml"/>
        <mapper resource="mappers/ItemPropertyValuesDTOMapper.xml"/>
        <mapper resource="mappers/ItemSocketDTOMapper.xml"/>
        <mapper resource="mappers/LogbookModsDTOMapper.xml"/>
        <mapper resource="mappers/PublicStashChangeDTOMapper.xml"/>
        <mapper resource="mappers/ResultDTOMapper.xml"/>
        <mapper resource="mappers/RewardsDTOMapper.xml"/>
        <mapper resource="mappers/ScourgedDTOMapper.xml"/>
        <mapper resource="mappers/UltimatumModsDTOMapper.xml"/>
    </mappers>
</configuration>