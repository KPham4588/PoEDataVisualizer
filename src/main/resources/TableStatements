CREATE TABLE IF NOT EXISTS `poe-oracle`.`VeiledMods` (
  `dbId` INT NOT NULL AUTO_INCREMENT,
  `itemId` INT NOT NULL,
  `veiledMod` VARCHAR(255) NOT NULL,
